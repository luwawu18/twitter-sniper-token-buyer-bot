# RapidAPI Configuration
# Get your API keys from https://rapidapi.com
RAPID_API_KEYS=your_rapidapi_key_here

# API Host Configuration
# Option 1: Twitter241 (was working before)
RAPID_HOST_NAME=twitter241.p.rapidapi.com

# Option 2: Other Twitter API services (requires subscription)
# RAPID_HOST_NAME=twitter-api45.p.rapidapi.com
# RAPID_HOST_NAME=twitter154.p.rapidapi.com

# Multi-User Monitoring Configuration
# Format: MONITOR_USER1=username1, MONITOR_KEYWORD1=keyword1, MONITOR_CA1=token_ca_address, MONITOR_BUY_AMOUNT1=amount_in_sol
#         MONITOR_USER2=username2, MONITOR_KEYWORD2=keyword2, MONITOR_CA2=token_ca_address, MONITOR_BUY_AMOUNT2=amount_in_sol, etc.

# Example 1: Single user monitoring with token CA and custom buy amount
MONITOR_USER1=elonmusk
MONITOR_KEYWORD1=solana
MONITOR_CA1=1A2B3C4D5E6F7G8H9I0J1K2L3M4N5O6P7Q8R9S0T1U2V3W4X5Y6Z
MONITOR_BUY_AMOUNT1=0.001

# Example 2: Multiple users with different keywords, CAs, and buy amounts
# MONITOR_USER1=elonmusk
# MONITOR_KEYWORD1=solana
# MONITOR_CA1=1A2B3C4D5E6F7G8H9I0J1K2L3M4N5O6P7Q8R9S0T1U2V3W4X5Y6Z
# MONITOR_BUY_AMOUNT1=0.001
# MONITOR_USER2=elonmusk
# MONITOR_KEYWORD2=token
# MONITOR_CA2=2B3C4D5E6F7G8H9I0J1K2L3M4N5O6P7Q8R9S0T1U2V3W4X5Y6Z7A8B9C
# MONITOR_BUY_AMOUNT2=0.005
# MONITOR_USER3=top100token
# MONITOR_KEYWORD3=top
# MONITOR_CA3=3C4D5E6F7G8H9I0J1K2L3M4N5O6P7Q8R9S0T1U2V3W4X5Y6Z7A8B9C0D1E
# MONITOR_BUY_AMOUNT3=0.01

# Example 3: Multiple users with same keywords but different CAs and buy amounts
# MONITOR_USER1=user1
# MONITOR_KEYWORD1=development
# MONITOR_CA1=1A2B3C4D5E6F7G8H9I0J1K2L3M4N5O6P7Q8R9S0T1U2V3W4X5Y6Z
# MONITOR_BUY_AMOUNT1=0.002
# MONITOR_USER2=user2
# MONITOR_KEYWORD2=development
# MONITOR_CA2=2B3C4D5E6F7G8H9I0J1K2L3M4N5O6P7Q8R9S0T1U2V3W4X5Y6Z7A8B9C
# MONITOR_BUY_AMOUNT2=0.003
# MONITOR_USER3=user3
# MONITOR_KEYWORD3=development
# MONITOR_CA3=3C4D5E6F7G8H9I0J1K2L3M4N5O6P7Q8R9S0T1U2V3W4X5Y6Z7A8B9C0D1E
# MONITOR_BUY_AMOUNT3=0.001

# Example 4: Monitoring without token CA (optional)
# MONITOR_USER1=elonmusk
# MONITOR_KEYWORD1=solana
# MONITOR_BUY_AMOUNT1=0.001
# (MONITOR_CA1 is not set, so it will be null)

# Example 5: Monitoring with empty keyword (buy on any tweet)
# MONITOR_USER1=elonmusk
# MONITOR_KEYWORD1=
# MONITOR_CA1=1A2B3C4D5E6F7G8H9I0J1K2L3M4N5O6P7Q8R9S0T1U2V3W4X5Y6Z
# MONITOR_BUY_AMOUNT1=0.0005

# Monitoring Timeout Configuration
# Set LOOP_TIME to stop monitoring after specified minutes
# 0 = no timeout (monitor indefinitely)
# 30 = stop after 30 minutes
# 60 = stop after 1 hour
# 120 = stop after 2 hours
LOOP_TIME=30

# Legacy Configuration (fallback for single user)
# If no MONITOR_USER variables are set, these will be used
USER_NAME=target_username
KEYWORD=Development
TOKEN_CA=1A2B3C4D5E6F7G8H9I0J1K2L3M4N5O6P7Q8R9S0T1U2V3W4X5Y6Z

# Tweet Filtering Options
# Set to "true" to include replies in monitoring
CHECK_REPLY=false

# Set to "true" to include retweets in monitoring  
CHECK_RETWEET=false

# Trading Configuration
# Default amount of SOL to spend per token (fallback if MONITOR_BUY_AMOUNT is not specified)
# Note: Individual buy amounts are now configured per user-keyword pair using MONITOR_BUY_AMOUNT1, MONITOR_BUY_AMOUNT2, etc.
BUY_AMOUNT=0.01

# Solana Trading Configuration (Required for auto-trading)
# Get your QuickNode RPC URL from https://quicknode.com
QUICKNODE_RPC_URL=your_quicknode_rpc_url_here

# Your wallet private key (base58 encoded)
# WARNING: Keep this secure and never share it!
WALLET_PRIVATE_KEY=your_wallet_private_key_here

# Astralane Configuration (Optional - for fast transaction confirmation)
# Get your Astralane API key from https://astralane.com
# This will make your token purchases faster and more reliable
ASTRALANE_URL=https://rpc.astralane.com
ASTRALANE_API_KEY=your_astralane_api_key_here 